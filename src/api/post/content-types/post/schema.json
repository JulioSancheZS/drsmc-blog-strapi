{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Titulo": {
      "type": "string",
      "required": true
    },
    "Descripcion": {
      "type": "blocks",
      "required": true
    },
    "FechaPublicacion": {
      "type": "date",
      "required": true
    },
    "TiempoLectura": {
      "type": "string",
      "required": true
    },
    "Autor": {
      "type": "string",
      "required": true
    },
    "Cover": {
      "allowedTypes": [
        "images",
        "files"
      ],
      "type": "media",
      "multiple": false,
      "required": false
    }
  }
}
